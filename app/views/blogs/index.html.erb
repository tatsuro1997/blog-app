<div class="container">
  <p id="notice"><%= notice %></p>

  <h1>Blogs test</h1>

  <table class="table table-striped">
    <thead>
    <tr>
      <th>Title</th>
      <th>Content</th>
      <th colspan="3"></th>
    </tr>
    </thead>

    <tbody>
    <% @blogs.each do |blog| %>
      <tr>
        <td><%= link_to blog.title, blog %></td>
        <% if blog.images[0] %>
          <td><%= image_tag blog.images[0].image_url.url, class: 'image-size' %></td>
        <% end %>
        <%
=begin%>
 <% if guest_user %>
          <td><%= link_to 'Show', blog %></td>
        <% else %>
          <td><%= link_to 'Show', blog %></td>
          <td>
            <%= link_to edit_blog_path(blog), method: :get do %>
              <i class="far fa-edit"></i>
            <% end %>
            <%= link_to 'Edit', edit_blog_path(blog) %>
          </td>
          <td>
            <%= link_to blog, method: :delete, data: {confirm: 'ほんとうに消しますか？'} do %>
              <i class="far fa-trash-alt"></i>
            <% end %>
            <%= link_to 'Destroy', blog, method: :delete, data: { confirm: 'Are you sure?' } %>
          </td>
        <% end %>
<%
=end%>
      </tr>
    <% end %>
    </tbody>
  </table>

  <br>

  <%= link_to '新規投稿', new_blog_path, class: 'btn btn-block btn-success btn-sm' %>

</div>
